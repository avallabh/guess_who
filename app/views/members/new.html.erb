<h1>Add a new member:</h1>

<%= notice %>

<%= form_for @member do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<p>
  <%= f.label :first_name, 'First Name' %>
  <%= f.text_field :first_name %>
</p>
<p>
  <%= f.label :last_name, 'Last Name' %>
  <%= f.text_field :last_name %>
</p>
<p>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :role, 'Role' %>
  <%= f.text_field :role %>
</p>
<p>Gender:<br/>
  <%= f.radio_button :gender, "Female" %> <%= f.label :gender, "Female" %>
  <%= f.radio_button :gender, "Male" %> <%= f.label :gender, "Male" %>
</p>

<p>
  <%= f.label :photo_url, "Member Photo" %>
  <%= f.file_field :photo_url %>
</p>

<%= f.submit %>
<% end %>
