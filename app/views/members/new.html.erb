<div class="row">
  <div class="small-12 columns text-center">
    <h1>Add New Member</h1>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= form_for @member do |f| %>
      <% if @member.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@member.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @member.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <p>
      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name, 'Last Name' %>
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :role, 'Role' %>
      <%= f.text_field :role %>
    </p>
    <p>Gender:<br/>
      <%= f.radio_button :gender, "Female" %> <%= f.label :gender, "Female" %>
      <%= f.radio_button :gender, "Male" %> <%= f.label :gender, "Male" %>
    </p>

    <p>
      <%= f.label :photo_url, "Member Photo" %>
      <%= f.file_field :photo_url %>
    </p>
      <%= f.submit class: "button large" %>

    <% end %>
  </div>
</div>
